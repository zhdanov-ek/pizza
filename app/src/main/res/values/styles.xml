<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Drawer Layout -->
    <style name="textDrawerLayoutName">
        <item name="android:textColor">@color/color_white_grey</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>


    <style name="FlatButtonNegative" parent="@android:style/Widget.Button.Small">
        <item name="android:layout_width">@dimen/button_flat_width</item>
        <item name="android:layout_height">@dimen/button_flat_height</item>
        <item name="android:textSize">@dimen/button_flat_font_size</item>
        <item name="android:background">@drawable/bg_flat_button_item</item>
        <item name="android:textColor">@color/colorButtonFlatTextNegative</item>
    </style>

    <style name="FlatButtonPositive" parent="@android:style/Widget.Button.Small">
        <item name="android:layout_width">@dimen/button_flat_width</item>
        <item name="android:layout_height">@dimen/button_flat_height</item>
        <item name="android:textSize">@dimen/button_flat_font_size</item>
        <item name="android:background">@drawable/bg_flat_button_item</item>
        <item name="android:textColor">@color/colorButtonFlatTextPositive</item>
    </style>


    <style name="RaisedButtonPositive" parent="@android:style/Widget.Button.Small">
        <item name="android:layout_width">@dimen/button_raised_width</item>
        <item name="android:layout_height">@dimen/button_raised_height</item>
        <item name="android:textSize">@dimen/button_raised_font_size</item>
        <item name="android:background">@drawable/bg_raised_button_positive</item>
        <item name="android:textColor">@color/colorButtonRaisedText</item>
    </style>

    <style name="RaisedButtonNegative" parent="@android:style/Widget.Button.Small">
        <item name="android:layout_width">@dimen/button_raised_width</item>
        <item name="android:layout_height">@dimen/button_raised_height</item>
        <item name="android:textSize">@dimen/button_raised_font_size</item>
        <item name="android:background">@drawable/bg_raised_button_negative</item>
        <item name="android:textColor">@color/colorButtonRaisedBackgroundPress</item>
    </style>

    <style name="RemoveButton" parent="@android:style/Widget.Button.Small">
        <item name="android:background">@drawable/bg_raised_button_remove</item>
        <item name="android:layout_height">@dimen/button_small_size</item>
        <item name="android:layout_width">@dimen/button_small_size</item>
    </style>

    <style name="textMainMenuTitle">
        <item name="android:textSize">@dimen/text_size_main_menu_title</item>
        <item name="android:textColor">@color/colorMainMenuTitle</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="itemMainMenu">
        <item name="android:background">@drawable/bg_item_rv</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:padding">@dimen/main_menu_item_padding</item>
        <item name="android:layout_height">@dimen/main_menu_item_height</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="textMainMenuDescription">
        <item name="android:textSize">@dimen/text_size_main_menu_description</item>
        <item name="android:layout_margin">@dimen/text_margin_main_menu</item>
        <item name="android:textColor">@color/colorMainMenuDescription</item>
    </style>


    <style name="textBig">
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textColor">@color/colorFont1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textMiddle">
        <item name="android:textSize">@dimen/text_size_middle</item>
        <item name="android:textColor">@color/colorFont1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textSmall">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/colorFont1</item>
    </style>

    <style name="textViewPrice">
        <item name="android:textColor">@color/colorPriceFont</item>
        <item name="android:padding">@dimen/dish_show_price_padding</item>
        <item name="android:layout_margin">@dimen/dish_show_price_layout_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textCounter">
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textColor">@color/colorButtonRaisedBackgroundPress</item>
        <item name="android:layout_marginLeft">@dimen/counter_margin</item>
        <item name="android:layout_marginRight">@dimen/counter_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="arrowUpDownStyle" parent="AppTheme">
        <item name="android:layout_width">@dimen/arrow_up_down_width</item>
        <item name="android:layout_height">@dimen/arrow_up_down_height</item>
        <item name="android:scaleX">1.5</item>
        <item name="android:src">@drawable/ic_arrow_up_down</item>
    </style>


    <style name="SignInButtonGoogle" parent="@android:style/Widget.Button.Small">
        <item name="android:layout_width">@dimen/button_raised_width</item>
        <item name="android:layout_height">@dimen/button_raised_height</item>
        <item name="android:textSize">@dimen/button_raised_font_size</item>
        <item name="android:background">@drawable/bg_sign_button_google</item>
        <item name="android:textColor">@color/colorDeliveryDishes</item>
    </style>

    <style name="SignInButtonFacebook" parent="@android:style/Widget.Button.Small">
        <item name="android:layout_width">@dimen/button_raised_width</item>
        <item name="android:layout_height">@dimen/button_raised_height</item>
        <item name="android:textSize">@dimen/button_raised_font_size</item>
        <item name="android:background">@drawable/bg_sign_button_facebook</item>
        <item name="android:textColor">@color/colorButtonRaisedText</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>


</resources>
