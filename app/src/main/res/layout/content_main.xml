<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.gek.pizza.activities.MainActivity"
    tools:showIn="@layout/app_bar_main">
    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/textMainMenuTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_title_order_menu" />

            <android.support.v7.widget.CardView
                android:id="@+id/cvMenuOrder"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_view_main_menu_height">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/card_view_main_menu_iv_width"
                        android:layout_height="match_parent"
                        android:background="@drawable/main_dishes" />

                    <TextView
                        style="@style/textMainMenuDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/main_text_order_menu"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>


            <TextView
                style="@style/textMainMenuTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_title_news"
                />

            <android.support.v7.widget.CardView
                android:id="@+id/cvNews"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_view_main_menu_height"
                android:background="@color/blue_grey_300">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/card_view_main_menu_iv_width"
                        android:layout_height="match_parent"
                        android:background="@drawable/main_news" />

                    <TextView
                        style="@style/textMainMenuDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/main_text_news"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <TextView
                style="@style/textMainMenuTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_title_orders" />

            <android.support.v7.widget.CardView
                android:id="@+id/cvOrders"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_view_main_menu_height">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/card_view_main_menu_iv_width"
                        android:layout_height="match_parent"
                        android:background="@drawable/main_delivery" />

                    <TextView
                        style="@style/textMainMenuDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/main_text_orders" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <TextView
                style="@style/textMainMenuTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_title_reservation" />
            <android.support.v7.widget.CardView
                android:id="@+id/cvReservations"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_view_main_menu_height">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/card_view_main_menu_iv_width"
                        android:layout_height="match_parent"
                        android:background="@drawable/main_reservations" />

                    <TextView
                        style="@style/textMainMenuDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/main_text_reservation" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <TextView
                style="@style/textMainMenuTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_title_contacts" />
            <android.support.v7.widget.CardView
                android:id="@+id/cvContacts"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_view_main_menu_height">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/card_view_main_menu_iv_width"
                        android:layout_height="match_parent"
                        android:background="@drawable/main_contacts" />

                    <TextView
                        style="@style/textMainMenuDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/main_text_contacts" />
                </LinearLayout>

            </android.support.v7.widget.CardView>


            <Button
                android:id="@+id/btnStartService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="startService delivery" />

            <Button
                android:id="@+id/btnStopService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="stopService delivery" />


            <Button
                android:id="@+id/btnShowStatusOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show status order" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
